<div id="messages" class="messages">
  <div id="messages-table-<%= params[:id] %>" class="messages-table">
    <% if @messages.present? %>
      <% @messages.each do |message| %>
        <div class="message">
          <div class="message-user">
            <%= message.user.user_name %>
          </div>
          <div class="message-content">
            <%= message.content %>
          </div>
        </div>
        <br>
      <% end %>
    <% end %>
  </div>
</div>
