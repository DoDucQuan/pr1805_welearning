<div class="container-fluid">

  <div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
      <h6 class="m-0 font-weight-bold text-primary">Tỉ lệ danh mục</h6>
    </div>
    <div class="card-body">
      <div class="chart-pie">
        <div id="category_chart" style="height: 100%;" data-name="<%= @load_categories %>" 
          data-count="<%= @load_courses_size %>"></div>
      </div>
    </div>
  </div>
  <div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
      <h6 class="m-0 font-weight-bold text-primary">Lượng mua</h6>
    </div>
    <div class="card-body">
      <div class="chart-area">
        <div id="day_chart" style="height: 100%;" data-point="<%= @load_data_week %>" 
          data-day="<%= @load_days %>"></div>
      </div>
    </div>
  </div>
</div>
