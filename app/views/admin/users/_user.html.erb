<li class="<%=activated_user user%>">
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.user_name, user %>
  <%=user.email%>
  <% if current_user.admin? && !current_user?(user) %>
    <div id="admin_button_<%= user.id %>" class="d-inline">
      <%= render "admin/users/admin", user: user %>
    </div>
  <% end %>
</li>
