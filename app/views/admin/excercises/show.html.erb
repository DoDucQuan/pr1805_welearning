<% provide :title, @excercise.excercise_name %>
<h1 align="center">
  <%= @excercise.excercise_name %>
</h1>

<div class="row">
  <div class="col-xl-3">
    <%= link_to "Cập nhật", edit_admin_excercise_path, class: "btn btn-info btn-sm float-right mb-2" %>
  </div>
</div>

<table width="95%" align="center" class="table-hover">
  <thead>
    <tr>
      <th>Câu hỏi</th>
      <th>Câu trả lời</th>
      <th>Đáp án đúng</th>
      <th>Xóa</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% if @excercise.questions.present? %>
        <% @questions.each.with_index do |q| %>
          <td><%= q.question_content %></td>
          <td>
            <% q.answers.each.with_index do |a| %>
              <%= a.answer_content %>
              <td><% a.is_correct %></q></td>
            <% end %>
          </td>
          <td><%= link_to "Thay đổi", "#",
            class: "btn btn-warning btn-sm" %></td>
          <td><%= link_to "Xóa", "#", method: :delete,
            class: "btn btn-danger btn-sm",
            data: {confirm: "Xác nhận xóa bài tập ."} %></td>
        <% end %>
      <% end %>
    </tr>
  </tbody>
</table>
  <%= will_paginate(@questions,
    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer,
    class: "mt-2 mr-2 pagination-sm d-flex justify-content-end")%>
<%= link_to "Thêm Bài tập", new_admin_lesson_excercise_path(@excercise), class: "float-right btn btn-primary btn-sm mr-2 mt-2"%>
