<%= provide :tittle,@course.name %>
<h1 align="justify"><%= @course.name %></h1>

<div class="col-md-offset-3">
  <div class="row-md-6 row-md-offset-3">
    <%=  image_tag @course.picture %><br>
    <p align="justify"><%=  @course.name %><br>
    Giá: <%= @course.price %><br>
    Mô tả: <%= @course.description %><br>
    Lượt mua: <%= @course.buy_times %><br>
    Đánh giá: <%= @course.rate %><br>
    </p><br>
  </div>
  <p align="justify">
    <%= link_to "Cho vào giỏ hàng", edit_user_path, class: "btn btn-primary" %>
  </p>
</div>
