<%= provide :tittle,@course.name %>
<h1 align="justify"><%= @course.name %></h1>

<div class="col-md-offset-3">
  <div class="row-md-6 row-md-offset-3">
    <%=  image_tag @course.picture %><br>
    <p align="justify"><%=  @course.name %><br>
    Giá: <%= @course.price %><br>
    Mô tả: <%= @course.description %><br>
    Lượt mua: <%= @course.buy_times %><br>
    Đánh giá: <%= @course.rate %><br>
    </p><br>
  </div>
  <p align="justify">
    <% if current_user.courses.ids.include? @course.id %>
      <%= link_to "Đã cho vào giỏ hàng", user_carts_path(current_user, course_id: @course.id), class: "btm btn-primary" %>
    <% else %>
      <%= link_to "Cho vào giỏ hàng", user_carts_path(current_user, course_id: @course.id), method: :post, class: "btn btn-primary" %>
    <% if !@course.added_cart? current_user %>
      <%= button_to [:user, :user_courses, user_id: current_user.id,
        course_id: @course.id],
        class: "btn btn-primary" do %>
        <span>Cho vào giỏ hàng</span>
      <% end %>
    <% else %>
      <% if course.paid_course? current_user %>
        <%= link_to "Đã ở trong giỏ hàng", user_carts_path(current_user),
          class: "btn btn-danger" %>
      <% else %>
        <%= link_to "Làm bài", "#", class: "btn btn-success" %>
      <% end %>
    <% end %>
  </p>
</div>

